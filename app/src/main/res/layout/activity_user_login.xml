<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#03acff"
        android:layout_height="250dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嗨，你好！"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准备开启新的征程吧！"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>





    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/tvULUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/yonghuming"
                 />

            <EditText
                android:paddingLeft="20dp"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入用户名"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/tvULPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mima" />

            <EditText
                android:id="@+id/password"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/login"
                android:background="@drawable/login_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="登录" />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/register"
                android:background="@drawable/login_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="注册" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
