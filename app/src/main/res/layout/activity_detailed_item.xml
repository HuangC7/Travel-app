<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:src="@drawable/sg_grange"
            android:id="@+id/activity_detailed_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/shijian"
                />
            <TextView
                android:id="@+id/activity_detailed_time"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text=" xxxx:xxxx:"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/time_border"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              app:srcCompat="@drawable/didian"
              />
          <TextView
              android:id="@+id/activity_detailed_place"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:text="武侯区"
              android:textSize="14dp"
              android:gravity="center_vertical"
              android:layout_marginLeft="5dp"

              />
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            >
            <ImageView
                android:id="@+id/activity_detailed_image1"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sg_grange"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/activity_detailed_image2"
                android:layout_weight="1"
                android:src="@drawable/sg_grange"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/activity_detailed_image3"
                android:layout_weight="1"
                android:src="@drawable/sg_grange"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_detailed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textSize="18dp"
            android:textColor="#000000"
            android:lineSpacingExtra="10dp"
            />
    </LinearLayout>
</LinearLayout>