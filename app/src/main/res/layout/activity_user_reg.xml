<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.RegisterActivity"
    tools:ignore="MergeRootFrame">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#03acff"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi，你好！"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来注册重庆之行app！"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >



        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/tvULUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yonghuming"
                />

            <EditText
                android:paddingLeft="20dp"
                android:id="@+id/usernameRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入用户名"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/tvULPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mima" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayoutRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="20dp"
                    android:id="@+id/passwordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="请输入密码"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/re_tvULPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mima" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/re_passwordLayoutRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="20dp"
                    android:id="@+id/re_passwordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_border"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/tvURRePwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nianling"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ageLayoutRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="20dp"
                    android:id="@+id/ageRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="年龄"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/Register"
                    android:background="@drawable/login_boder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="注册" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="已有账号，"
                        android:textSize="12dp"
                        />
                    <Button
                        android:gravity="left|center"
                        android:id="@+id/btnCancel"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:textColor="#03acff"
                        android:text="立即登录" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


